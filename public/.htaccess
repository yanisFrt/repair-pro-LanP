# Configuration Apache pour Repair Pro
# Pour les hébergements traditionnels (cPanel, etc.)

# Activer la réécriture d'URL
RewriteEngine On

# Forcer HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# Supprimer www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Redirections 301
RewriteRule ^home/?$ / [R=301,L]
RewriteRule ^prix/?$ /#pricing [R=301,L,NE]
RewriteRule ^fonctionnalites/?$ /#features [R=301,L,NE]
RewriteRule ^tarifs/?$ /#pricing [R=301,L,NE]
RewriteRule ^telecharger/?$ /download [R=301,L]

# Headers de sécurité
<IfModule mod_headers.c>
    Header set X-DNS-Prefetch-Control "on"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "camera=(), microphone=(), geolocation=()"
    Header set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"

    # Supprimer les headers inutiles
    Header unset X-Powered-By
    Header unset Server
</IfModule>

# Compression Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript
    AddOutputFilterByType DEFLATE application/json application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml application/atom_xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Cache navigateur
<IfModule mod_expires.c>
    ExpiresActive On

    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"

    # CSS et JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"

    # Fonts
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"

    # HTML et XML
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType text/xml "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour"
</IfModule>

# Types MIME corrects
<IfModule mod_mime.c>
    AddType application/manifest+json .json
    AddType text/cache-manifest .appcache
    AddType image/webp .webp
    AddType image/avif .avif
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType application/vnd.ms-fontobject .eot
    AddType font/ttf .ttf
    AddType font/otf .otf
</IfModule>

# Protection contre le hotlinking
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?repair-pro\.tech [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp|svg)$ - [F,L]
</IfModule>

# Bloquer l'accès aux fichiers sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|git|gitignore|md|lock|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Page d'erreur 404 personnalisée
ErrorDocument 404 /404.html

# Optimisations supplémentaires
<IfModule mod_headers.c>
    # ETags
    FileETag MTime Size

    # Keep-Alive
    Header set Connection keep-alive
</IfModule>